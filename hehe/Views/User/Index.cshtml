@model IEnumerable<hehe.ViewModels.UserIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th>Email</th>
        <th>Username</th>
        <th>Role</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Email</td>
            <td>@item.UserName</td>
            <td>@item.UserRoles</td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId })
                </td>
            }
        </tr>
    }
</table>